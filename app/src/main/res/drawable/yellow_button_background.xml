<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Set the corner radius to make it rounded if needed -->

            <!-- Set the color to yellow -->
